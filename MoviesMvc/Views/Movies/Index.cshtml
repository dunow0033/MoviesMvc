@model List<MoviesMvc.Models.Movie>
@{
}

<h2>List of Movies:</h2>

<a asp-action="Create">Create New Movie</a>

<table class="table">
	<thead>
		<tr>
			<th>Title</th>
			<th>Release Date</th>
			<th>Genre</th>
			<th>Price</th>
			<th>Rating</th>
			<th>Other Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var movie in Model)
		{
			<tr>
				<td>@movie.Title</td>
				<td>@movie.Release_date</td>
				<td>@movie.Genre</td>
				<td>@movie.Price</td>
				<td>@movie.Rating</td>
				<td>
					<a asp-action="Detail" asp-route-id="@movie.Id">Detail</a>
					<a asp-action="Edit" asp-route-id="@movie.Id">Edit</a> 
					<a asp-action="Delete" asp-route-id="@movie.Id">Delete</a> 
				</td>
			</tr>
		}
	</tbody>
</table>